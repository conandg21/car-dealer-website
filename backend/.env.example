# MongoDB Atlas connection string (replace <password> and <dbname>)
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority

# Cloudinary (get from Cloudinary dashboard)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: Basic admin password for simple protection of admin upload (not secure for production)
ADMIN_PASSWORD=choose-a-password
